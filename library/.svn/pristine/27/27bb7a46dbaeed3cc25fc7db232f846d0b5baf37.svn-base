*{  
   margin:0;  
   padding:0;  
   font-size:16px;  
   font-family:"微软雅黑";  
}  
.nav{
	width:100%;
}
.content{
	width: 99%;
	margin-left: 0.6%;
	border: 2px solid #00CED1;
}
.content #volform{
	margin:5% 5% 10% 5%;
	padding: 5% 2% 5% 1%;
	border: 2px solid black;
	border-radius: 20px;
	background-color: #dcd296;
}
.content>p{
	display: block;
	width:120px;
	padding: 0;
	font-size: 1.2em;
	margin-top: 5%;
	margin:0 auto;
}


.layui-form-label{
	padding:9px 0 !important;
}

.layui-form-label{
	width:70px !important;
}

.layui-input-block{
	margin-left: 90px;
}
.layui-btn{
	border-radius: 10px;
	width:35%;
	padding: 0;
}


@media screen and (max-width: 1600px) {
    html{font-size: 60px;}
}

@media screen and (max-width: 1200px) {
    html{font-size: 30px;}
}

@media screen and (max-width: 800px) {
    html{font-size: 16px;}
}

@media screen and (max-width: 600px) {
    html{font-size: 12px;}
}


#outframe {
	width: 100%;
	height: 100%;
	border: 2px black solid;
}

#cupboard-content {
	margin: 10% auto;
	width: 90%;
	height: 90%;
	border: 1px solid black;
}

div>a:link {
	text-decoration: none
}

div>a>img{
	width:14%;
	height:14%;
	margin:10px;
}
#canorderednum{
	font-size:0.8rem;
	font-weight:bold;
	float: right;
}

#orderedcicle {
	margin: 20% auto;
	text-align: center;
	background-color: red;
	border: 1px solid black;
	border-radius: 50%;
}
p>strong{
	font-size:1.5rem;
	font-weight:bold;
}
#nextactivitybgntm,#nextcanordernum{
	font-size:0.8rem;
	font-weight:bold;
	margin:0.5rem;
}
#time{
	font-size:2.5rem;
}

